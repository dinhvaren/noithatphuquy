<!-- Dashboard Section -->
<div id="dashboard" class="section">
    <h2 class="section-title">Tổng quan</h2>
    <div class="row">
        <div class="col-md-3">
            <div class="card stats-card" data-type="orders" style="cursor: pointer;">
                <div class="card-body">
                    <h5 class="card-title">Tổng đơn hàng</h5>
                    <h2 class="card-text">150</h2>
                    <small class="text-white-50">+12% so với tháng trước</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stats-card" data-type="products" style="cursor: pointer;">
                <div class="card-body">
                    <h5 class="card-title">Tổng sản phẩm</h5>
                    <h2 class="card-text">45</h2>
                    <small class="text-white-50">+5 sản phẩm mới</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stats-card" data-type="users" style="cursor: pointer;">
                <div class="card-body">
                    <h5 class="card-title">Tổng người dùng</h5>
                    <h2 class="card-text">1,250</h2>
                    <small class="text-white-50">+8% so với tháng trước</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stats-card" data-type="revenue" style="cursor: pointer;">
                <div class="card-body">
                    <h5 class="card-title">Doanh thu</h5>
                    <h2 class="card-text">250.000.000đ</h2>
                    <small class="text-white-50">+15% so với tháng trước</small>
                </div>
            </div>
        </div>
    </div>
    <!-- Analysis Section -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="analysis-card">
                <div class="card-body">
                    <h5 class="analysis-title" id="analysisTitle">Phân tích đơn hàng</h5>
                    <div class="chart-container">
                        <canvas id="analysisChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 