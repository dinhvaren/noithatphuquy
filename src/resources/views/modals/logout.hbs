<!-- Logout Confirmation Modal -->
<div class="modal fade" id="logoutModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header" style="background-color: var(--primary-color); color: white;">
                <h5 class="modal-title">Xác nhận đăng xuất</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center py-4">
                <i class="bi bi-box-arrow-right text-warning" style="font-size: 3rem;"></i>
                <p class="mt-3 mb-0">Bạn có chắc chắn muốn đăng xuất khỏi hệ thống?</p>
            </div>
            <div class="modal-footer justify-content-center border-top-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="confirmLogout">
                    <i class="bi bi-box-arrow-right"></i> Đăng xuất
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    const logoutLink = document.querySelector('a[href="/admin/login"]');
    const logoutModal = new bootstrap.Modal(document.getElementById('logoutModal'));
    
    logoutLink.addEventListener('click', function(e) {
        e.preventDefault();
        logoutModal.show();
    });

    // Xử lý nút xác nhận đăng xuất
    document.getElementById('confirmLogout').addEventListener('click', function() {
        window.location.href = '/admin/login';
    });
</script> 