<!-- Support Form Section -->
<div class="container py-5">
    <div class="row g-0 justify-content-center">
        <!-- Form Column -->
        <div class="col-md-5 bg-light p-4 p-md-5">
            <div class="support-form">
                <div class="hotline-badge text-center mb-4">
                    <span class="badge bg-secondary px-4 py-2">
                        <i class="fas fa-phone me-2"></i>
                        HOTLINE: 093 579.8694
                    </span>
                </div>
                <h2 class="mb-3">Bạn cần hỗ trợ?</h2>
                <p class="text-muted mb-4">Xin vui lòng để lại yêu cầu hỗ trợ của bạn.</p>
                
                <form id="supportForm" class="needs-validation" novalidate>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <input type="text" class="form-control" id="fullName" placeholder="Họ tên" required>
                        </div>
                        <div class="col-md-6">
                            <input type="tel" class="form-control" id="phone" placeholder="+(84) 0123 456" required>
                        </div>
                    </div>
                    
                    <div class="mt-3">
                        <input type="email" class="form-control" id="email" placeholder="Enter email" required>
                    </div>
                    
                    <div class="mt-3">
                        <textarea class="form-control" id="message" rows="4" placeholder="Nội dung liên hệ" required></textarea>
                    </div>
                    
                    <div class="mt-3">
                        <div class="custom-file-input">
                            <input type="file" class="form-control d-none" id="attachment">
                            <label for="attachment" class="file-label d-flex align-items-center border rounded">
                                <span class="choose-file-btn">Choose File</span>
                                <span class="file-name flex-grow-1 px-3">No file chosen</span>
                            </label>
                        </div>
                    </div>
                    
                    <div class="text-end">
                        <button type="submit" class="btn btn-dark mt-4 px-4">GỬI YÊU CẦU</button>
                    </div>
                </form>
            </div>
        </div>
        
        <!-- Image Column -->
        <div class="col-md-5">
            <div class="h-100" style="min-height: 600px;">
                <img src="https://nhaxinh.com/wp-content/uploads/2023/07/banner-nha-xinh-khong-gian-tu-van.jpg" alt="Support Background" class="w-100 h-100" style="object-fit: cover;">
            </div>
        </div>
    </div>
</div>

<style>
/* Base styles */
.support-form .form-control {
    border: 1px solid #dee2e6;
    padding: 0.75rem 1rem;
    font-size: 0.95rem;
    border-radius: 4px;
}

.support-form .form-control:focus {
    border-color: #c8a165;
    box-shadow: 0 0 0 0.2rem rgba(200, 161, 101, 0.25);
}

.support-form .btn-dark {
    background-color: #000;
    border: none;
    padding: 0.75rem 2rem;
    font-weight: 500;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
}

.support-form .btn-dark:hover {
    background-color: #c8a165;
}

.support-form textarea {
    resize: none;
}

.support-form h2 {
    font-weight: 600;
    color: #333;
}

.hotline-badge .badge {
    background-color: #c8a165 !important;
    font-weight: normal;
    font-size: 1rem;
}

/* File input styles */
.custom-file-input {
    position: relative;
}

.custom-file-input .file-label {
    cursor: pointer;
    margin: 0;
    transition: all 0.3s ease;
    border-color: #dee2e6;
}

.custom-file-input .file-label:hover {
    background-color: #f8f9fa;
}

.custom-file-input .choose-file-btn {
    background-color: #f8f9fa;
    border-right: 1px solid #dee2e6;
    padding: 12px 20px;
    color: #495057;
    font-size: 0.95rem;
    white-space: nowrap;
    transition: all 0.3s ease;
}

.custom-file-input .file-name {
    color: #6c757d;
    font-size: 0.95rem;
    padding: 12px 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.custom-file-input .file-label:hover .choose-file-btn {
    background-color: #e9ecef;
}

.custom-file-input .file-label:focus-within {
    border-color: #c8a165;
    box-shadow: 0 0 0 0.2rem rgba(200, 161, 101, 0.25);
}

/* Responsive styles */
@media (max-width: 1200px) {
    .container {
        max-width: 95%;
    }
}

@media (max-width: 991px) {
    .support-form h2 {
        font-size: 1.75rem;
    }
    
    .hotline-badge .badge {
        font-size: 0.9rem;
    }
}

@media (max-width: 768px) {
    .container {
        padding: 0;
    }
    
    .row {
        margin: 0;
    }
    
    .col-md-5 {
        padding: 0;
    }
    
    .support-form {
        padding: 2rem 1rem;
    }
    
    .support-form h2 {
        font-size: 1.5rem;
    }
    
    .hotline-badge .badge {
        font-size: 0.85rem;
        padding: 0.5rem 1rem;
    }
    
    .form-control, 
    .custom-file-input .choose-file-btn,
    .custom-file-input .file-name {
        font-size: 0.9rem;
        padding: 0.6rem 0.8rem;
    }
    
    .btn-dark {
        width: 100%;
        margin-top: 1.5rem;
    }
}

@media (max-width: 576px) {
    .support-form {
        padding: 1.5rem 1rem;
    }
    
    .row.g-3 > [class*="col-"] {
        padding-right: 0;
        padding-left: 0;
    }
    
    .custom-file-input .choose-file-btn {
        padding: 8px 12px;
    }
    
    .custom-file-input .file-name {
        padding: 8px 12px;
    }
    
    .hotline-badge .badge {
        font-size: 0.8rem;
        padding: 0.4rem 0.8rem;
    }
}

/* Print styles */
@media print {
    .support-form {
        page-break-inside: avoid;
    }
    
    .btn-dark {
        display: none;
    }
}
</style>

<script>
// Form validation
(function () {
    'use strict'
    var forms = document.querySelectorAll('.needs-validation')
    Array.prototype.slice.call(forms)
        .forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault()
                    event.stopPropagation()
                }
                form.classList.add('was-validated')
            }, false)
        })
})()

// File input handling
document.getElementById('attachment').addEventListener('change', function(e) {
    var fileName = e.target.files[0] ? e.target.files[0].name : 'No file chosen';
    e.target.closest('.custom-file-input').querySelector('.file-name').textContent = fileName;
});

// Responsive handling
function adjustFormLayout() {
    if (window.innerWidth <= 768) {
        document.querySelector('.row.g-3').classList.remove('g-3');
        document.querySelector('.row').classList.add('g-2');
    } else {
        document.querySelector('.row').classList.remove('g-2');
        document.querySelector('.row').classList.add('g-3');
    }
}

window.addEventListener('load', adjustFormLayout);
window.addEventListener('resize', adjustFormLayout);
</script>
