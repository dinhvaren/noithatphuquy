<script>
const titles = [
    "Cao Cấp",
    "Sang Trọng",
    "Đẳng Cấp",
    "Hiện Đại",
    "Độc Đáo"
];

const descriptions = [
    "Kiến tạo không gian sống đẳng cấp với thiết kế độc quyền",
    "Nâng tầm giá trị sống với nội thất sang trọng",
    "Trải nghiệm không gian sống tinh tế và đẳng cấp",
    "Kết hợp hoàn hảo giữa thẩm mỹ và công năng",
    "Định hình phong cách sống thời thượng"
];

let titleIndex = 0;
let descIndex = 0;
let titleCharIndex = 0;
let descCharIndex = 0;
let isDeleting = false;

function type() {
    const titleElement = document.querySelector('.typing-text');
    const descElement = document.querySelector('.typing-description');
    
    if (!titleElement || !descElement) return;

    const currentTitle = titles[titleIndex];
    const currentDesc = descriptions[descIndex];

    if (isDeleting) {
        // Xóa cả title và description
        if (descCharIndex > 0) {
            descElement.textContent = currentDesc.substring(0, descCharIndex - 1);
            descCharIndex--;
            setTimeout(type, 25);
        } else if (titleCharIndex > 0) {
            titleElement.textContent = currentTitle.substring(0, titleCharIndex - 1);
            titleCharIndex--;
            setTimeout(type, 25);
        } else {
            // Khi đã xóa hết, chuyển sang text mới
            isDeleting = false;
            titleIndex = (titleIndex + 1) % titles.length;
            descIndex = (descIndex + 1) % descriptions.length;
            setTimeout(type, 1000); // Đợi 1 giây trước khi bắt đầu text mới
        }
    } else {
        // Gõ title trước, sau đó gõ description
        if (titleCharIndex < currentTitle.length) {
            titleElement.textContent = currentTitle.substring(0, titleCharIndex + 1);
            titleCharIndex++;
            setTimeout(type, 100);
        } else if (descCharIndex < currentDesc.length) {
            descElement.textContent = currentDesc.substring(0, descCharIndex + 1);
            descCharIndex++;
            setTimeout(type, 50);
        } else {
            // Đã gõ xong, đợi 5 giây rồi bắt đầu xóa
            setTimeout(() => {
                isDeleting = true;
                type();
            }, 5000);
        }
    }
}

// Bắt đầu animation khi trang load xong
document.addEventListener('DOMContentLoaded', () => {
    setTimeout(type, 1000);
});
</script>
